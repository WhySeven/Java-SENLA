package Test_3;

import java.util.Scanner;

public class Test_3 {

	public static void main(String[] args) {
		/*Scanner in = new Scanner(System.in);
        System.out.print("Input a string: ");
        String s = in.nextLine();
        in.close();*/
		String s = "va av 1";
        String [] split = s.split(" ");
        System.out.println("Number of words = " + split.length);
        String [] out = UppercaseFirstSymbol(split);
        for(int i = 0; i < split.length;i++)
        {
        	System.out.println(out[i]);
        }
	}
	static String[] UppercaseFirstSymbol(String[] split)
	{
		for(int i = 0; i< split.length;i++)
		{
			split[i] = split[i].substring(0, 1).toUpperCase() + split[i].substring(1);
			System.out.println(split[i]);
		}
		return split;
	}
	static String [] Sort (String[] split)
	{
		
		return split;
	}
	static void SwapWords (String a, String b)
	{
		String temp = a;
		a = b;
		b = temp;
	}
}
